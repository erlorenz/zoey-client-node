{
  "compilerOptions": {
    "target": "ES2022", // Require Node.js v18 or above
    "lib": ["ES2023"],
    "module": "Node16", // Using type - module in package.json,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "noEmit": true // Using esbuild
  }
}
